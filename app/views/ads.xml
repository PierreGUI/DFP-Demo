<Alloy>
    <Window>
        <RightNavButton>
            <Button id="refreshBtn" onClick="doButtonClick" />
        </RightNavButton>

        <ScrollView class="container">
            <View class="bannerWrap" >
                <Label text="Version: " id="version" />
                <Button id="refreshBtn" onClick="doButtonClick" platform="android" />
            </View>

            <View class="bannerWrap default" id="defaultAd">
                <Label text="Default banner" class="title" />
            </View>

            <View class="bannerWrap smart" id="smartAd">
                <Label text="Smart banner" class="title" />
            </View>

            <View class="bannerWrap multiple" id="sizesAd">
                <Label text="Multiple sizes" class="title" />
            </View>
        </ScrollView>
    </Window>
</Alloy>
