<Alloy>
    <Window>
        <RightNavButton>
            <Button id="refreshBtn" onClick="doButtonClick" />
        </RightNavButton>

        <ScrollView class="container">
            <View class="bannerWrap" platform="android" >
                <Button id="refreshBtn" onClick="doButtonClick" />
            </View>

            <View class="bannerWrap default">
                <Label text="Default banner" class="title" />
                <View module="ti.dfp" id="defaultBanner" class="banner" onReceivead="doReceiveAd" />
            </View>

            <View class="bannerWrap multiple" id="size">
                <Label text="Multiple sizes" class="title" />
                <View module="ti.dfp" id="sizesBanner" class="banner" onReceivead="doReceiveAd" />
            </View>

            <View class="bannerWrap smart" id="smartWrapper">
                <Label text="Smart banner" class="title" />
                <View module="ti.dfp" id="smartBanner" class="banner" onReceivead="doReceiveAd" />
            </View>

            <Label text="Version: " id="version" />
        </ScrollView>
    </Window>
</Alloy>
